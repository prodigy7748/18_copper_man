<h2>會員登入</h2>

<%= form_for(@user, url: sign_in_user_path, method: 'post') do |form| %>
  <%= form.label t('activerecord.attributes.user.email')%>
  <%= form.text_field :email%>
  <br>
  <%= form.label t('activerecord.attributes.user.password_digest')%>
  <%= form.password_field :password%>
  <br>
  <%= form.submit t('users.sign_in')%>
<% end %>
