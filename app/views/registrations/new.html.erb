<h2><%= t('users.register') %></h2>
<% if @user.errors.any? %> 
  <ul>
    <% @user.errors.full_messages.each do |message| %> 
        <li><%= message %></li> 
    <% end %> 
  </ul>
<% end %> 

<%= form_for(User.new, url:sign_up_user_path) do |form|%>
  <div class="form-group mb-2">
    <%= form.label t('activerecord.attributes.user.email'), class:"mb-2
    " %>
    <%= form.text_field :email, class:"form-control"%>
  </div>
  <div class="form-group mb-2">
    <%= form.label t('activerecord.attributes.user.password_digest'), class:"mb-2
    " %>
    <%= form.password_field :password, class:"form-control"%>
  </div>
  <div class="form-group mb-2">
    <%= form.label t('activerecord.attributes.user.password_confirmation'), class:"mb-2
    " %>
    <%= form.password_field :password_confirmation, class:"form-control" %>
  </div>
  <div class="form-group mb-2">
    <%= form.label t('activerecord.attributes.user.name'), class:"mb-2
    " %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
  <%= form.submit t('users.register'), :class => "btn btn-primary" %>
<% end %>
